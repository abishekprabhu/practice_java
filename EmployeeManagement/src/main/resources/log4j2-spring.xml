<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="log-path">C:/Users/abishekprabhu.kannan/OneDrive - HCL TECHNOLOGIES LIMITED/IDEA_PROJECTS/practice/EmployeeManagement/logs/</Property>
        <Property name="log-path_back">C:/Users/abishekprabhu.kannan/OneDrive - HCL TECHNOLOGIES LIMITED/IDEA_PROJECTS/practice/EmployeeManagement/logs/</Property>
        <property name="pattern">%d{yyyy-MMM-dd HH:mm:ss} [%t] %-5level %-50c{1.} - %msg%n</property>
    </Properties>
    <Appenders>
        <!--ALL API INFO-->
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
        <RollingFile name="Api-File-Appender"
                     fileName="${log-path}/order_log.log"
                     filePattern="${log-path_back}/order_log-%i.log" >
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <!-- <TimeBasedTriggeringPolicy />--> <!-- Rotated everyday -->
                <SizeBasedTriggeringPolicy size="25 MB" /> <!-- Or every 25 MB -->
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!--ALL API INFO-->
        <Logger name="com.sample" level="info" additivity="false">
            <AppenderRef ref="Api-File-Appender"/>
            <AppenderRef ref="Console-Appender"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console-Appender" />
            <AppenderRef ref="Api-File-Appender" />
        </Root>
    </Loggers>
</Configuration>